generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String    @id @default(uuid()) @db.Uuid
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  projects  Project[]

  @@map("organizations")
}

model Project {
  id             String        @id @default(uuid()) @db.Uuid
  organizationId String        @map("org_id") @db.Uuid
  name           String
  createdAt      DateTime      @default(now()) @map("created_at")
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  environments   Environment[]

  @@map("projects")
}

model Environment {
  id         String     @id @default(uuid()) @db.Uuid
  projectId  String     @map("project_id") @db.Uuid
  name       String
  apiKeyHash String     @map("api_key_hash")
  createdAt  DateTime   @default(now()) @map("created_at")
  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  flags      Flag[]
  auditLogs  AuditLog[]

  @@map("environments")
}

model Flag {
  id            String        @id @default(uuid()) @db.Uuid
  environmentId String        @map("environment_id") @db.Uuid
  key           String
  description   String        @default("")
  isArchived    Boolean       @default(false) @map("is_archived")
  createdAt     DateTime      @default(now()) @map("created_at")
  environment   Environment   @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  versions      FlagVersion[]

  @@unique([environmentId, key])
  @@map("flags")
}

model FlagVersion {
  id        String   @id @default(uuid()) @db.Uuid
  flagId    String   @map("flag_id") @db.Uuid
  version   Int
  stateJson Json     @map("state_json") @db.JsonB
  createdBy String   @default("system") @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")
  flag      Flag     @relation(fields: [flagId], references: [id], onDelete: Cascade)

  @@unique([flagId, version])
  @@map("flag_versions")
}

model AuditLog {
  id            String   @id @default(uuid()) @db.Uuid
  environmentId String   @map("environment_id") @db.Uuid
  actor         String
  action        String
  entityKey     String   @map("entity_key")
  diffJson      Json?    @map("diff_json") @db.JsonB
  createdAt     DateTime @default(now()) @map("created_at")
  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([environmentId, createdAt])
  @@map("audit_logs")
}
